{
  "name": "make-multiplayer",
  "displayName": "Make Multiplayer",
  "version": "0.0.1",
  "author": "petruspierre",
  "description": "Com a extensão Make Multiplayer você consegue jogar os seus jogos web favoritos com seus amigos!",
  "type": "module",
  "license": "GPL-3.0-only",
  "keywords": [
    "chrome-extension",
    "lit",
    "vite",
    "partykit",
    "multiplayer"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
