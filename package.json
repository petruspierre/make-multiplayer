  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.19",
    "@types/chrome": "^0.0.246",
    "gulp": "^4.0.2",
    "gulp-zip": "^6.0.0",
    "partykit": "0.0.105",
    "path": "^0.12.7",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "vite": "^4.4.11",
    "vite-tsconfig-paths": "^4.3.2"
